# Application
NODE_ENV=development  # Tells the app we're in development mode
PORT=3000             # The app will run on port 3000

# Database - These are like the address for your PostgreSQL
DB_HOST=localhost     # Database is on your own computer
DB_PORT=5432          # PostgreSQL's default door number
DB_NAME=expense_tracker_dev  # Name of your database
DB_USER=your_postgres_username_here  # Your PostgreSQL username
DB_PASSWORD=your_postgres_password_here  # Your PostgreSQL password

# JWT Authentication - Like a secret key for user login
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_EXPIRES_IN=7d     # Login tokens last 7 days

# File Uploads - Settings for receipt files
UPLOAD_PATH=./uploads  # Where to store uploaded files
MAX_FILE_SIZE=5242880  # Maximum file size (5MB)
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf  # What files are allowed

# CORS - Allows frontend to talk to backend
FRONTEND_URL=http://localhost:3001  # Where your React app will run